# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT=praxis-db
PUBSUB_TOPIC=news_scraper_topic
PUBSUB_SUBSCRIPTION=news_ingestion_sub

# Database
SUPABASE_DSN=postgresql://user:password@host:5432/database

# API Keys
NEWSDATA_API_KEY=your_newsdata_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
OPENROUTER_API_KEY=your_openrouter_api_key_here

# OpenRouter Settings (optional - defaults shown)
OPENROUTER_MODEL=google/gemini-3-flash-preview
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# OpenAI Embedding Settings (optional - defaults shown)
OPENAI_EMBED_MODEL=text-embedding-3-large

# Scraper Settings (optional - defaults shown)
MAX_HOURS_AGO=24

# Ingestor Settings (optional - defaults shown)
BATCH_SIZE=10
EMBEDDING_BATCH_SIZE=16
MAX_CONCURRENT_BATCHES=3
LLM_TIMEOUT_SECONDS=30
IDLE_TIMEOUT=300
LOG_LEVEL=INFO

# Redis Cache (optional - leave empty to use local memory cache)
REDIS_URL=
CACHE_TTL_SECONDS=300
